 {% extends '@!EasyAdmin/menu.html.twig' %}

{% block main_menu %}
<h1 class="titulo">
    <img  src="{{ asset('./img/logo.png') }}" id='img_menu'>
</h1>
<div class='menu'> 
    
        <div class='menu_item'> 
       
            <a href="{{ path('app_tcc') }}"   onclick="showDiv()" id="Login">
            {% if pagina != 'index' %}
            <p>    
            {% endif %}
                
            {% if pagina == 'index' %}
              <p class='pagina'>    
            {% endif %}   
            <button class="btn_menu" v>
                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-text-indent-left" viewBox="0 0 16 16">
                            <path d="M2 3.5a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5m.646 2.146a.5.5 0 0 1 .708 0l2 2a.5.5 0 0 1 0 .708l-2 2a.5.5 0 0 1-.708-.708L4.293 8 2.646 6.354a.5.5 0 0 1 0-.708M7 6.5a.5.5 0 0 1 .5-.5h6a.5.5 0 0 1 0 1h-6a.5.5 0 0 1-.5-.5m0 3a.5.5 0 0 1 .5-.5h6a.5.5 0 0 1 0 1h-6a.5.5 0 0 1-.5-.5m-5 3a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5"/>
                        </svg>
                    <b><label>Indexação</label></b>
             </button>        
                </p>
            </a>            
            {% if index_all != null %}
                <form method='post'> 
                {% for index_alls in index_all %}  
                
                        {% if pagina != index_alls.tipo %}
                            <p>    
                        {% endif %}
                        {% if pagina == index_alls.tipo %}
                            <p class='pagina'>    
                        {% endif %} 
                        <button type="submit" name ='dt' class="btn_menu" value ="{{index_alls.id}}">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
                                </svg>
                                <b><label>{{index_alls.tipo}}</label></b>
                            
                    </button> 
                    </p>       
                {% endfor %} 
                 </form> 
            {% endif %}
         

          <a href="{{ path('log') }}"   onclick="showDiv()" id="Login">
            {% if pagina != 'log' %}
            <p>    
            {% endif %}
                
            {% if pagina == 'log' %}
              <p class='pagina'>    
            {% endif %}   
            <button class="btn_menu">
                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-person-lines-fill" viewBox="0 0 16 16">
                        <path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m-5 6s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1zM11 3.5a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1h-4a.5.5 0 0 1-.5-.5m.5 2.5a.5.5 0 0 0 0 1h4a.5.5 0 0 0 0-1zm2 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1zm0 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1z"/>
                    </svg>
                    <b><label>Logs</label></b>
             </button>        
                </p>
            </a>

    </div>
    
    <!-- Bootstrap core JavaScript  -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>

{% endblock main_menu %} 
